comp_include _get_cword


_alias()
{
    local cur

    COMPREPLY=()
    cur=`_get_cword`

    case "$COMP_LINE" in
    *[^=])
        COMPREPLY=( $( compgen -A alias -S '=' -- $cur ) )
        ;;
    *=)
        COMPREPLY=( "$( alias ${cur%=} 2>/dev/null | \
                 sed -e 's|^alias '$cur'\(.*\)$|\1|' )" )
        ;;
    esac
}
