_jar()
{
    local cur

    COMPREPLY=()
    cur=${COMP_WORDS[COMP_CWORD]}

    if [ $COMP_CWORD = 1 ]; then
        COMPREPLY=( $( compgen -W 'c t x u' -- $cur ) )
        return 0
    fi

    case "${COMP_WORDS[1]}" in
        *c*f)
            _filedir
            ;;
        *f)
            _filedir '?(e|j|w)ar'
            ;;
        *)
            _filedir
            ;;
    esac
}
_jar
comp_install  # Make completion persistent
