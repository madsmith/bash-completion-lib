# Mailman completion by Guillaume Rousse <rousse@ccr.jussieu.fr>
#

comp_include _mailman_lists

_inject()
{
	local cur prev

	COMPREPLY=()
	cur=`_get_cword`
	prev=${COMP_WORDS[COMP_CWORD-1]}

	case "$prev" in
		-@(l|-listname=))
			_mailman_lists
			return 0
			;;
	esac

	if [[ "$cur" == -* ]]; then
		COMPREPLY=( $( compgen -W '-l --listname= -q --queue= \
			-h --help' -- $cur ) )
	else
		_filedir
	fi
} # _inject()

comp_install  # Make completion persistent for subsequent invocations

_inject  # Generate completions for first invocation
