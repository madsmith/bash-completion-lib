# Mailman completion by Guillaume Rousse <rousse@ccr.jussieu.fr>
#

comp_include _mailman_lists

_unshunt()
{
	local cur

	COMPREPLY=()
	cur=`_get_cword`

	if [[ "$cur" == -* ]]; then
		COMPREPLY=( $( compgen -W '-h --help' -- $cur ) )
	else
		_filedir -d
	fi
} # _unshunt()

comp_install  # Make completion persistent for subsequent invocations

_unshunt  # Generate completions for first invocation
