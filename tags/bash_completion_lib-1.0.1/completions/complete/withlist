# Mailman completion by Guillaume Rousse <rousse@ccr.jussieu.fr>
#

comp_include _mailman_lists

_withlist()
{
	local cur

	COMPREPLY=()
	cur=`_get_cword`

	if [[ "$cur" == -* ]]; then
		COMPREPLY=( $( compgen -W '-l --lock -i --interactive \
			-r --run -a --all -q --quiet -h --help' -- $cur ) )
	else
		_mailman_lists
	fi
} # _withlist()

comp_install  # Make completion persistent for subsequent invocations

_withlist  # Generate completions for first invocation
