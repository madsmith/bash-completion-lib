# Linux iwpriv(8) completion
#

comp_include _available_interfaces

_iwpriv()
{
    local cur prev

    COMPREPLY=()
    cur=`_get_cword`
    prev=${COMP_WORDS[COMP_CWORD-1]}

    case "$prev" in
        roam)
            COMPREPLY=( $( compgen -W 'on off' -- $cur ) )
            return 0
            ;;
        port)
            COMPREPLY=( $( compgen -W 'ad-hoc managed' -- $cur ) )
            return 0
            ;;
    esac

    if [ $COMP_CWORD -eq 1 ]; then
        if [[ "$cur" == -* ]]; then
            COMPREPLY=( $( compgen -W '--help --version' -- $cur ) ) 
        else
            _available_interfaces -w
        fi
    else
        COMPREPLY=( $( compgen -W '--all roam port' -- $cur ) ) 
    fi
}

comp_install  # Make completion persistent for subsequent invocations

_iwpriv  # Generate completions for first invocation
